                            @*                             <div class="row"> *@
                            @*                                 <div class="col-md-4">@image.Resource.Code.Text</div> *@
                            @*                                 <div class="col-md-2"> *@
                            @*                                     @if (image.Resource.ValueQuantity != null) *@
                            @*                                     { *@
                            @*                                         @image.Resource.ValueQuantity.Value *@
                            @*                                         @image.Resource.ValueQuantity.Unit *@
                            @*                                     } *@
                            @*                                 </div> *@
                            @*                                 <div class="col-md-6">@image.Resource.EffectiveDateTime.ToString("g")</div> *@
                            @*                             </div> *@
                            @*                         } *@
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>